<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

  <% places = [] %>
    <ol id="each_activity">
      <% @activities.each_with_index do |activity,i| %>
        <li>
          <div id="item<%= i %>"><%= activity[i].name %>, <%= activity[i].location.city %>, <%= activity[i].rating %>
          <%= hidden_field_tag "activity_id", activity[i].id %></div>
          <button type="button" onclick="replaceActivity( <%= activity.to_json %>, <%= i %> )">Replace</button>
        </li>
        <% places << activity[i] %>
    <% end %>
  </ol>
 <% if user_signed_in? %>
  <button type="button" id="save-itinerary" onclick="saveItinerary(<%= @activities.count %>)">Save Itinerary</button>
 <% else %>
 You need to sign in to save
<% end %>

<% @hash = Gmaps4rails.build_markers(places) do |a, marker|
            marker.lat a.location.coordinate.latitude
            marker.lng a.location.coordinate.longitude
          end %>

<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>
<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({
      provider: {
      },
      internal: {
        id: 'map'
      }
    },
  function(){
      markers = handler.addMarkers(<%=raw @hash.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
    }
  );

</script>
