<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry&callback=initMap" type="text/javascript"></script>
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" type="text/javascript"></script>

<div id="itinerary-error">
<% unless @errors == nil %>
***Put this in dangerous error coloring***<br>
  <% @errors.each do |error| %>
    <%= error %><br>
  <% end %>
<% end %>
</div><br><br>

<div class="col-md-4">
  <div id="name-itinerary">
  <%= label_tag 'Name of Your Itinerary' %>
    <%= text_field_tag(:itineraryName, nil, required:true, placeholder: 'Name') %>
  </div>

  <ol id="each_activity">
    <% @activities.each_with_index do |activity,i| %>
      <li id="li<%= i %>">
        <div class="item" id="item<%= i %>">
          <a href="<%= activity[i].url %>"><%= activity[i].name %></a><br>
          <%= activity[i].location.city %>, <%= activity[i].rating %>
          <%= hidden_field_tag "activity_id", activity[i].id %>
          <%= hidden_field_tag "lat", "#{activity[i].location.coordinate.latitude}" %>
          <%= hidden_field_tag "lng", "#{activity[i].location.coordinate.longitude}" %>
        </div>
        <button type="button" id="replace" onclick="replaceActivity( <%= activity.to_json %>, <%= i %> )">Replace</button>
        <button type="button" id="replace" onclick="deleteActivity( <%= activity.to_json %>, <%= i %> )">Delete</button>
      </li>
      <% end %>
  </ol>

<button type="button" id="save-itinerary" onclick="saveItinerary()">Save Itinerary</button><br>
</div>

<div class="col-md-8">
  <input type="submit" id="refresh-map" value="Refresh Map">
  <div id="gmap" style='height: 400px;'></div>
</div>
